    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run perf test",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build release",
            "program": "${workspaceFolder}/src/Yarhl.PerformanceTests/bin/Release/net6.0/Yarhl.PerformanceTests.dll",
            "args": [ "auto" ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": ".NET Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}